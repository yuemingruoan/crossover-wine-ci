[require]
shader model >= 5.0

[uav 1]
format r32-float
size(2d, 2, 2)

0.1 0.2
0.3 0.4

[uav 2]
format r32g32b32a32-float
size(2d, 1, 1)

0.5 0.6 0.7 0.8

[pixel shader]
RWTexture2D<float> u;
RWTexture2D<float4> v;

float4 main() : sv_target
{
    u[uint2(0, 0)] = 0.5;
    u[uint2(0, 1)].x = 0.6;
    u[uint2(1, 1)] = 0.7;
    v[uint2(0, 0)].yxwz = float4(1, 2, 3, 4);
    return 0;
}

