[require]
shader model >= 4.0

[rtv 0]
format r32g32b32a32-uint
size (2d, 640, 480)

[pixel shader]
uniform float a;

uint4 main() : sv_target
{
    return f32tof16(a);
}

[test]
uniform 0 float 42.0
