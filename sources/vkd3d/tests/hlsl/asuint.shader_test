[require]
shader model >= 4.0

[pixel shader]
uniform float f;
uniform int i;
uniform uint u;
uniform float h;

float4 main() : sv_target
{
    uint4 ret;

    ret.x = asuint(f);
    ret.y = asuint(i);
    ret.z = asuint(u);
    ret.w = asuint((half)h);
    return ret;
}

