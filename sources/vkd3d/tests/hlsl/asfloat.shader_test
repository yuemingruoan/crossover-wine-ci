[require]
shader model >= 4.0

[pixel shader]
uniform float f;
uniform int i;
uniform uint u;
uniform float h;

float4 main() : sv_target
{
    float4 ret;

    ret.x = asfloat(f);
    ret.y = asfloat(i);
    ret.z = asfloat(u);
    ret.w = asfloat((half)h);
    return ret;
}

[test]
uniform 0 float4 123.0 -2.0 456 0.01
draw quad
probe (320,240) rgba (123.0, -2.0, 456.0, 0.01)

[pixel shader]
uniform float2x2 m;
uniform float4 v;

float4 main() : sv_target
{
    return float4(asfloat(m)[0][1], asfloat(v).y, 0, 0);
}

