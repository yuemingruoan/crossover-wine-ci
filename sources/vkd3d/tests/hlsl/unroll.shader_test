% Unrolling edge cases.

[pixel shader todo(sm<4)]
float a : register(c0);

float4 main() : sv_target
{
    int i;
    if (a > 0)
    {
        [unroll]
        for (i = 0; i < 10; ++i);

        return float4(i, a, 2.0, 3.0);
    }

    return float4(0.0, a, 3.0, 4.0);
}

