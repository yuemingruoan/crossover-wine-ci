/* bitcast float <-> int, fptosi, fptoui, sitofp, uitofp, fpext, fptrunc */
uniform float4 u;

float4 main() : sv_target
{
    float4 result;
    int i = asint(u.x);
    int j = u.y;
    uint k = u.z;

    i += 1 << 23;
    result.x = asfloat(i) + j;
    result.y = k ^ 4;

    double d = (double)u.z * u.w;
    result.z = d / u.y;
    result.w = 0;
    return result;
}

