[require]
shader model >= 4.0

[pixel shader]
uniform float4 u;

float4 main() : sv_target
{
    float tmp = 0.0f;
    for (int i = 0; i < u.x; ++i)
    {
        if (i == u.y)
        {
            tmp = 1.0f;
            break;
        }
        tmp += 1.0f;
    }

    return float4(tmp, 0, 0, 0);
}

