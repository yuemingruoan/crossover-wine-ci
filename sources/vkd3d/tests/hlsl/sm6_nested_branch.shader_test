[require]
shader model >= 4.0

[pixel shader]
uniform float4 u;
float4 main() : sv_target
{
    float4 result = 0;

    switch (u.x)
    {
        case 0:
        case 3:
        case 4:
        case 14:
        case 23:
        case 31:
        case 32:
        case 111:
            result.x = 2;
            if (u.y > 2.5)
                result.x = u.y * u.z / u.w;
            break;
        case 2:
        case 9:
            result.x = 3;
            break;
        default:
            result.x = 5;
            break;
    }

    return result;
}

[test]
uniform 0 float4 23.25 2.75 3.0 1.5
draw quad
probe (0, 0) rgba (5.5, 0.0, 0.0, 0.0) 1
