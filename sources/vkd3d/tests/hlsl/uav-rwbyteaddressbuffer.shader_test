shader model >= 6.0
float64

[pixel shader]
RWByteAddressBuffer u : register(u1);

float4 main() : sv_target
{
    u.Store<int64_t>(0, (int64_t)-12);
    u.Store<double>(8, 13.3);
    return 0;
}

