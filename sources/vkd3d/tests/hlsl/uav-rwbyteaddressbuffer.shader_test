[require]
shader model >= 6.2
native-16-bit

[compute shader]
RWByteAddressBuffer u : register(u1);

    [numthreads(1, 1, 1)]
void main()
{
    u.Store<int16_t>(0, (int16_t)11);
    u.Store<int16_t>(2, (int16_t)-12);
    u.Store<uint16_t>(4, (uint16_t)13);
    u.Store<uint16_t>(6, (uint16_t)0xfff2);
    u.Store<half>(8, 13.375);
    u.Store<half>(10, 14.5);
}

