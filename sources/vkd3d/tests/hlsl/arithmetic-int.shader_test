% Note that the negation here causes loss of precision on SM1.
[pixel shader]
float4 main() : sv_target
{
    int a = 16782201;  // This rounds down to 16782200 when converted to float.

    return float4(a + 1, (-(-a)) + 1, 0, 0);
}

