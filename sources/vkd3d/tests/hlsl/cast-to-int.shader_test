[pixel shader]
uniform float f;
uniform uint u;
uniform bool b;
uniform float h;

float4 main() : sv_target
{
    float4 ret;

    ret.x = ((float)(int)f) - 1.5;
    ret.y = ((float)(int)u) + 2.5;
    ret.z = ((float)(int)b) / 2;
    ret.w = ((float)(int)(half)h) + 3.5;
    return ret;
}

